<h1>Listing friendships</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.friend.name %></td>
        <td>[ <%= link_to 'Destroy', friendship, method: :delete,
          data: { confirm: 'Are you sure?' } %> ]</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Friend', users_path %>
